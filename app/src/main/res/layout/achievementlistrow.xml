<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/achievementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/achievement_title"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/achievementDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/achievementName"
        android:layout_below="@+id/achievementName"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:text="@string/description_of_the_achievement_that_was_achieved"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/achievementCircle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/achievementName"
        android:layout_marginStart="34dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/circle_red"
        android:contentDescription="@string/red_circle" />
</RelativeLayout>